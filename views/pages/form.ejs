<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <section class="vh-100 bg-image"
            style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
            <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                            <div class="card" style="border-radius: 15px;">
                                <div class="card-body p-5">
                                    <h2 class="text-uppercase text-center mb-5">Registration</h2>

                                    <form method="post" action="/form/List">

                                        <div class="form-outline mb-4">
                                            <input type="text" id="form3Example1cg" class="form-control form-control-lg"
                                                name="name" />
                                            <label class="form-label" for="form3Example1cg"> Name</label>
                                        </div>
                                        <% if (errors && errors.find(e=> e.path === 'name')) { %>
                                            <div class="error">
                                                <%= errors.find(e=> e.path === 'name').message %>
                                            </div>
                                            <% } %>

                                                <div class="form-outline mb-4">
                                                    <input type="email" id="form3Example3cg"
                                                        class="form-control form-control-lg" name="email" />
                                                    <label class="form-label" for="form3Example3cg">Email</label>
                                                </div>
                                                <% if (errors && errors.find(e=> e.path === 'email')) { %>
                                                    <div class="error">
                                                        <%= errors.find(e=> e.path === 'email').message %>
                                                    </div>
                                                    <% } %>

                                                        <div class="form-outline mb-4">
                                                            <input type="text" id="form3Example4cg"
                                                                class="form-control form-control-lg"
                                                                name="phone_number" />
                                                            <label class="form-label" for="form3Example4cg">Phone
                                                                Number</label>
                                                            <% if (errors && errors.find(e=> e.path === 'phone_number'))
                                                                { %>
                                                                <div class="error">
                                                                    <%= errors.find(e=> e.path ===
                                                                        'phone_number').message %>
                                                                </div>
                                                                <% } %>
                                                        </div>



                                                        <div class="d-flex justify-content-center">
                                                            <button type="submit"
                                                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                                                        </div>




                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
<script src="https://kit.fontawesome.com/81ddcacba4.js" crossorigin="anonymous"></script>

</html>